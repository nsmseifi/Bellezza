EVENTS:

-- Table: public.events

-- DROP TABLE public.events;

CREATE TABLE public.events
(
    id uuid NOT NULL,
    creator text COLLATE pg_catalog."default" NOT NULL,
    target text COLLATE pg_catalog."default" NOT NULL,
    action text COLLATE pg_catalog."default" NOT NULL,
    creation_date integer NOT NULL,
    entity_name text COLLATE pg_catalog."default" NOT NULL,
    entity_id uuid NOT NULL,
    seen boolean NOT NULL,
    modification_date integer,
    modifier text COLLATE pg_catalog."default",
    CONSTRAINT event_id PRIMARY KEY (id)
)
WITH (
    OIDS = FALSE
)
TABLESPACE pg_default;

ALTER TABLE public.events;

