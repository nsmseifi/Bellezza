DIRECT-MESSAGE:


-- Table: public.direct_messages

-- DROP TABLE public.direct_messages;

CREATE TABLE public.direct_messages
(
    id uuid NOT NULL,
    message text COLLATE pg_catalog."default" NOT NULL,
    sender text COLLATE pg_catalog."default" NOT NULL,
    reciever text COLLATE pg_catalog."default" NOT NULL,
    seen boolean NOT NULL,
    creation_date integer NOT NULL,
    modifier text COLLATE pg_catalog."default",
    modification_date integer,
    CONSTRAINT direct_id PRIMARY KEY (id)
)
WITH (
    OIDS = FALSE
)
TABLESPACE pg_default;

ALTER TABLE public.direct_messages;


